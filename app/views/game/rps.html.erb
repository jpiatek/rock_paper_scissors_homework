<html>
<body>


 <hr>

  <div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title text-center">You played <%=@user_move%>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%=@user_move%>.png" class="img-responsive">
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title text-center">The computer played <%=@computer_move%>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%=@computer_move%>.png" class="img-responsive">
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="well">
          <h1 class="text-center">You <%=@outcome%>!</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5 class="panel-title">Summary</h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>When you played</th>
          <th>you won</th>
          <th>you lost</th>
          <th>you tied</th>
        </tr>

        <tr>
          <td>rock</td>
          <td><%= @rockwin%></td>
          <td><%= @rocklose%></td>
          <td><%= @rocktie%></td>
        </tr>

        <tr>
          <td>paper</td>
          <td><%= @paperwin%></td>
          <td><%= @paperlose%></td>
          <td><%= @papertie%></td>
        </tr>

        <tr>
          <td>scissors</td>
          <td><%= @scissorswin%></td>
          <td><%= @scissorslose%></td>
          <td><%= @scissorstie%></td>
        </tr>

        <tr>
          <th>Total</th>
          <th><%= @totalwin%></th>
          <th><%= @totallose%></th>
          <th><%= @totaltie%></th>
        </tr>
      </table>
    </div>


    <div class="panel panel-info">
      <div class="panel-heading">
        <h5 class="panel-title">
          Complete history
          (<%=@total%>)
        </h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>User Move</th>
          <th>Computer Move</th>
          <th>User Wins</th>
          <th>Computer Wins</th>
          <th>Tie</th>
        </tr>


        <% @all_moves.each do |move|%>

          <tr>
            <td><%=move.user_move%></td>
            <td><%=move.computer_move%></td>
            <td><%=move.user_wins%></td>
            <td><%=move.computer_wins%></td>
            <td><%=move.tie%></td>
          </tr>
<%end%>


</body>
<html>


